{
    "version": "0.2.0",
    "configurations": [
        {
            // uses pocketbase
            // pocketbase serve -- publicDir ./
            "name": "Launch index.html",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://127.0.0.1:8090/",
            "webRoot": "${workspaceFolder}",
            "reloadOnChange": {
                "watch": "${workspaceFolder}/**/**",
                "debounce": 0
            },
        }
    ]
}