{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch index.html",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${workspaceFolder}/index.html",
            "reloadOnChange": {
                "watch": "${workspaceFolder}/**/**",
                "debounce": 0
            },
        }
    ]
}